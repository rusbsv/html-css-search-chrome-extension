{
    "manifest_version": 2,
    "name": "Быстрая справка по HTML5/CSS3",
    "description": "Расширение помогает быстро найти информацию о нужном теге/селекторе",
    "version": "1.0",
    "browser_action":
    {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "*://htmlbook.ru/*"
    ],
    "background":
    {
        "scripts": ["background.js"]
    }
}